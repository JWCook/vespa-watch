option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "djangoproject.settings.settings_dev"
    "PYTHONPATH": "/opt/python/current/app/djangoprojectd:$PYTHONPATH"
    VESPA_SUNAME: "vespawatch"
    VESPA_SU_PWD: "vespawatch"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: djangoproject/djangoproject/wsgi.py
    NumProcesses: 3
    NumThreads: 20


container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python iotd/manage.py migrate --noinput"
    leader_only: true
